<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaochuan.web.repository.PlantMapper">
  <resultMap id="BaseResultMap" type="com.xiaochuan.web.entity.Plant">
    <id column="id" jdbcType="BIGINT" property="id"/>
    <id column="farmer_id" jdbcType="INTEGER" property="farmerId"/>
    <id column="goods_id" jdbcType="INTEGER" property="goodsId"/>
    <id column="start_date" jdbcType="DATE" property="startDate"/>
    <id column="address" jdbcType="VARCHAR" property="address"/>
    <id column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
  </resultMap>

  <sql id="Base_Column_List">
    id, farmer_id, goods_id, start_date, address, create_time
  </sql>

  <select id="select" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"/>
    from `plant`
    <where>
      <if test="farmerId != null">and farmer_id = #{farmerId}</if>
      <if test="goodsId != null">and goods_id = #{goodsId}</if>
    </where>
  </select>

  <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"/>
    from `plant`
    where id = #{id,jdbcType=BIGINT}
  </select>

  <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
    delete from `plant`
    where id = #{id,jdbcType=BIGINT}
  </delete>

  <insert id="insert" parameterType="com.xiaochuan.web.entity.Plant">
    <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Long">
      SELECT LAST_INSERT_ID()
    </selectKey>
    insert into `plant` (farmer_id, goods_id, start_date, address)
    values (#{farmerId, jdbcType=INTEGER }, #{goodsId,jdbcType=INTEGER },
    #{startDate,jdbcType=DATE }, #{address,jdbcType=VARCHAR })
  </insert>

</mapper>